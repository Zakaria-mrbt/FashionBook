              <img src="https://mdbootstrap.com//img/Photos/Square/1.jpg" class="w-[50px] h-[50px] rounded-full " alt="">
              <div  class=" flex flex-row ml-3 ] bottom-6">
              <p>{{ post.idprofil.lastname }}</p>
              </div>
              
            </div>
            <div class="ml-16">
              <form action="">
                <input type="text" placeholder="Commenter" class=" placeholder:text-blackbtn bg-gray-200 border-1 border-black rounded-[20px] h-[35px] w-[460px] text-sm focus:ring-blue-500 focus:border-blue-500 pl-9">
