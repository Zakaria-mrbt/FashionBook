          <div>
            <h5 class="font-semibold text-xl mt-8 mb-4"> {{ post.title }} </h5>
          </div>
          {# End Media Title #}
          {# Post Content #}
          <p class="text-sm">{{ post.content }}</p>
          <div class="  flex flex-col-reverse items-center">
            <a class="inline-block px-6 py-2.5 transition duration-150 ease-in-out" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
